{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": true,  // No genera archivos, solo transpila
    "resolveJsonModule":true
  },
  "lib": ["es2015"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
